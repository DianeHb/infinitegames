<div class="search-page">
  <div class="search-title">
    <%= image_tag("dice-search.png") %>
    <h2>Tes games of <%= current_user.username %> </h2>
    <%= image_tag("dice-search.png") %>
  </div>
</div>

<div class="cards">
  <% @games.each do |library_game| %>
  <div class= "card">
  <% if library_game.borrowed == false %>
    <div class= "blob">
      <img class="image-card align-center" src= <%= image_path library_game.game.image_url %> >
    </div>
    <% else %>
      <div class= "blob-grey">
      <img class="image-card align-center" src= <%= image_path library_game.game.image_url %> >
    </div>
    <% end %>
    <div class="text-center">
      <p><%= sanitize '<i class="fas fa-star text-info"></i>' * library_game.game.rating_general %> <%= sanitize '<i class="fas fa-star"></i>' * (5 - library_game.game.rating_general) %> </p>
      <h3><%= library_game.game.name %></h3>
    </div>
  </div>
  <% end %>
</div>
