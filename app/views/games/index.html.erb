<div class="blob-left-games">
  <%= image_tag("Games_index/blob-search-left.png") %>
</div>
<div class="blob-right-games">
  <%= image_tag("Games_index/blob-search-right.png") %>
</div>
<div class="search-page">
  <div class="search-title">
    <%= image_tag("dice-search.png") %>
    <h2>Find your ideal board game !</h2>
    <%= image_tag("dice-search.png") %>
  </div>
</div>
<%= render "shared/search" %>

<div class="cards">
  <% @games.each do |game| %>
    <%= link_to game_path(game), class: "card-game-linked" do %>
      <div class= "card">
        <div class= "blob ">
          <img class="image-card align-center" src= <%= image_path game.image_url %> >
        </div>
       <div class="text-center">
         <div class="home-stars">
          <%= sanitize '<i class="fas fa-star fa-xs text-info""></i>' * game.rating_general %> <%= sanitize '<i class="fas fa-star fa-xs"></i>' * (5 - game.rating_general) %>
        </div>
        <h3><%= game.name %></h3>
        <div class="home-categories">
          <% if game.categories != [] %>
            <p class=game_cat_details">
              <% nb_categories = game.categories.count < 2 ? game.categories.count : 2 %>
              <% game.categories.first(nb_categories - 1).each do |category| %>
                <%= category.name %> â€¢
              <% end %>
              <%= game.categories[nb_categories - 1].name %>
            </p>
          <% end %>
        </div>


        </div>
      </div>
    <% end %>
  <% end %>
</div>
