<div class="text-center p-5">
 <h1> find your ideal board game !</h1>
</div>

<%= render "shared/search" %>

<div class="cards">
  <% @games.each do |game| %>
  <div class= "card">
    <div class= "blob ">
      <img class="image-card align-center" src= <%= image_path game.image_url %> >
    </div>
    <div class="text-center">
      <p><%= sanitize '<i class="fas fa-star text-info"></i>' * game.rating_general %> <%= sanitize '<i class="fas fa-star"></i>' * (5-game.rating_general) %> </p>
      <h3><%= game.name%></h3>
    </div>
  </div>
  <% end %>
</div>
