<div class="search-background">
  <div class="container">

      <%= form_tag games_path, method: :get do %>
      <div class="search-grid">
          <div class="search-item">
           <label for="query">Name of the game </label>
            <%= text_field_tag :query,
                               params[:query],
                               class: "form-control",
                               placeholder: "Find a Game" %>
          </div>

          <div class="search-item">
          <label for="min_age">Minimum age </label>
            <%= text_field_tag :min_age,
                               params[:min_age],
                               class: "form-control",
                               placeholder: "Min age" %>
          </div>

          <div class="search-item", >
           <label for="players_number">Number of players </label>
            <%= text_field_tag :players_number,
                               params[:players_number],
                               class: "form-control",
                               placeholder: "4P" %>
          </div>

          <div class="search-item">
           <label for="duration"> Duration </label>
            <%= text_field_tag :duration,
                               params[:duration],
                               class: "form-control",
                               placeholder: "50 min" %>
          </div>

          <div class="search-btn-2">
            <%= submit_tag "SEARCH", class: "btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
