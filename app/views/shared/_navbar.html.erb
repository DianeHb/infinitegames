<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag("logo.png") %>
  <% end %>



  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "All games", games_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag current_user.avatar_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Deconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "All games", games_path, class: "nav-link" %>
        </li>
        <li class="mb-6">
          <%= link_to "LOG IN", new_user_session_path, class: "navbtn btn-primary" %>
          <%= link_to "SIGN UP", new_user_registration_path, class: "navbtn btn-secondary" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
