
<div class="container mt-3">
      <h2 class="text-center m-3">Sign up</h2>
 <div class="row align-center">
    <div class="col-6 cols-sm-6 col-md-6 color">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs ">
          <%= f.input :username, :label => "Username",
                                required: true %>
          <%= f.input :first_name, :label => "First name",
                                required: true %>
          <%= f.input :last_name, :label => "Last name",
                                required: true %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :avatar_url, :label => "Avatar url",
                                required: false %>
        </div>

        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Sign up", class: "btn-lg btn-danger m-3"  %>
        </div>
      <% end %>
    </div>
      <div class="col-6 cols-sm-6 col-md-6 d-flex align-items-end flex-column bd-highlight" style="background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQgG6ZgsvnETML38lWCHC2V1HP1KWozWU9TYw&usqp=CAU); background-size:cover;">
      </div>
  </div>
</div>
