<div class="container mt-3">
      <h2 class="text-center m-3">Log in</h2>
 <div class="row align-center">
    <div class="col-6 cols-sm-6 col-md-6 color log_in">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs mt-4">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Log in", class: "btn-lg btn-primary m-3" %>
        </div>
      <% end %>
    </div>
      <div class="col-6 cols-sm-6 col-md-6 d-flex align-items-end flex-column bd-highlight sign-in-background">
      </div>
  </div>
  <div class= "espace">
  </div>
</div>
